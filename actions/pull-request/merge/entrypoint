#!/bin/bash

set -eu
set -o pipefail

function main() {
  local user token number delete_branch

  while [ "${#}" != 0 ]; do
    case "${1}" in
      --user)
        user="${2}"
        shift 2
        ;;

      --token)
        token="${2}"
        shift 2
        ;;

      --number)
        number="${2}"
        shift 2
        ;;

      --delete-branch)
        delete_branch="${2}"
        shift 2
        ;;

      "")
        shift
        ;;

      *)
        echo "unknown argument \"${1}\""
        exit 1
    esac
  done

  if [[ "${delete_branch}" != 'true' && "${delete_branch}" != 'false' ]]; then
    echo "delete-branch parameter must be true or false"
    exit 1
  fi
  pr::merge "${user}" "${token}" "${number}" "${delete_branch}"
}

function pr::merge() {
  local user token number
  user="${1}"
  token="${2}"
  number="${3}"
  delete_branch="${4}"

  echo "Merging PR ${number}"

  mkdir -p "${HOME}/.config/gh"
  cat <<-EOF > "${HOME}/.config/gh/hosts.yml"
---
github.com:
  user: ${user}
  oauth_token: ${token}
EOF

  pushd "${GITHUB_WORKSPACE}" > /dev/null || true
    gh pr merge "${number}" --rebase --delete-branch="${delete_branch}"
  popd > /dev/null || true
}

main "${@:-}"
